#include <stdio.h>

int main() {
  int sp, st, i, j, k;
  printf("Enter rows: ");
  scanf("%d", &st);
  sp = st * 2;
  for(i = 1; i <= st; i++)
  {
        for(j = 1; j <= i; j++) 
        {
          if(j == 1)
                for(k = 1; k <= sp - i*2; k++)
                  printf(" ");
          printf(" * ");
        }
        printf("\n");
  }
  }
